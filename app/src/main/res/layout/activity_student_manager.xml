<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentManagerActivity">

    <LinearLayout
        android:id="@+id/addNewStudent"
        android:layout_width="409dp"
        android:layout_height="140dp"
        android:layout_marginTop="52dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/textView28"
            android:layout_width="326dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/descriptionStudentList"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/btn_backgroundcolor"
            android:gravity="center"
            android:text="Add"
            app:icon="@drawable/ic_baseline_add_24" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/student_list"
        android:layout_width="406dp"
        android:layout_height="456dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addNewStudent" />

</androidx.constraintlayout.widget.ConstraintLayout>